<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_3sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"

        app:cardCornerRadius="@dimen/_25sdp"

        android:divider="@android:color/transparent"

        card_view:cardElevation="10dp"
        card_view:cardPreventCornerOverlap="false"
      >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >

            <ImageView
                android:id="@+id/imgartist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/taylorswift"

                />

            <TextView
                android:id="@+id/txtArtisttype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableStart="@drawable/musicfirst"
                android:gravity="center"
                android:text="123"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/futurabookfont"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtartistname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgartist"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Taylor Swift"
        android:textColor="#232437"
     android:fontFamily="@font/futuramedium"
        android:textSize="@dimen/_14sdp"/>

</LinearLayout>